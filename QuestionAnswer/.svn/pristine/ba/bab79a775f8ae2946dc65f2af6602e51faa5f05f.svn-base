<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?attr/background_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/tv_fragment_stem"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/empty"
            android:textColor="?attr/font_black"
            android:textSize="@dimen/font_size_normal" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/divide_height"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="?attr/divide_gray" />

        <com.ssdut411.app.questionanswer.widget.ListViewForScrollView
            android:id="@+id/lv_fragment_options"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            android:dividerHeight="@dimen/view_space_8" />
        <Button
            android:id="@+id/bt_fragment_check"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/touch_view_48"
            android:layout_marginTop="@dimen/margin_space_32"
            android:background="@drawable/shape_button_solid"
            android:padding="@dimen/view_space_8"
            android:text="@string/look_answer" />

        <LinearLayout
            android:id="@+id/ll_fragment_my_answer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_space_8"
            android:background="@drawable/shape_red_solid"
            android:orientation="horizontal"
            android:padding="@dimen/view_space_8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/my_answer"
                android:textColor="?attr/font_black"
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:id="@+id/tv_fragment_my_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/view_space_8"
                android:text="@string/empty"
                android:textColor="?attr/font_black"
                android:textSize="@dimen/font_size_normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fragment_analytical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/view_space_8"
            android:background="@drawable/shape_analytical_solid"
            android:orientation="vertical"
            android:padding="@dimen/view_space_8">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/touch_view_48"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/touch_view_48"
                    android:gravity="center_vertical"
                    android:text="@string/stand_answer"
                    android:textColor="?attr/font_white"
                    android:textSize="@dimen/font_size_normal" />

                <TextView
                    android:id="@+id/tv_fragment_stand_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/touch_view_48"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/view_space_8"
                    android:text="@string/empty"
                    android:textColor="?attr/font_white"
                    android:textSize="@dimen/font_size_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/touch_view_48"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/touch_view_48"
                    android:gravity="center_vertical"
                    android:text="@string/point"
                    android:textColor="?attr/font_white"
                    android:textSize="@dimen/font_size_normal" />

                <TextView
                    android:id="@+id/tv_fragment_point"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/touch_view_48"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/view_space_8"
                    android:text="@string/empty"
                    android:textColor="?attr/font_white"
                    android:textSize="@dimen/font_size_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/touch_view_48"
                    android:gravity="center_vertical"
                    android:text="@string/question_analytical"
                    android:textColor="?attr/font_white"
                    android:textSize="@dimen/font_size_normal" />

                <TextView
                    android:id="@+id/tv_fragment_analytical"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/touch_view_48"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/view_space_8"
                    android:text="@string/empty"
                    android:textColor="?attr/font_white"
                    android:textSize="@dimen/font_size_normal" />
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
</ScrollView><!-- From: file:/D:/Android/Project/QuestionAnswer/app/src/main/res/layout/fragment_question.xml -->