<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/theme_green"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?attr/theme_green"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="195dp"
            android:layout_weight="6"
            android:background="@drawable/shape_register"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="@dimen/login_width"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/phone_number"
                    android:textColor="?attr/font_black"
                    android:textSize="@dimen/font_size_normal" />

                <EditText
                    android:id="@+id/et_register_count"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/shape_register_first"
                    android:hint="@string/please_input_phone_number"
                    android:paddingLeft="@dimen/view_space_8"
                    android:textColor="?attr/font_black"
                    android:textSize="@dimen/font_size_normal" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="?attr/divide_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="@dimen/login_width"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/check_code"
                    android:textColor="?attr/font_black"
                    android:textSize="@dimen/font_size_normal" />

                <EditText
                    android:id="@+id/et_register_check"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="?attr/background_white"
                    android:hint="@string/please_input_check_code"
                    android:paddingLeft="@dimen/view_space_8"
                    android:textColor="?attr/font_black"
                    android:textSize="@dimen/font_size_normal" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="?attr/divide_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="@dimen/login_width"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/password"
                    android:textColor="?attr/font_black"
                    android:textSize="@dimen/font_size_normal" />

                <EditText
                    android:id="@+id/et_register_password"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="?attr/background_white"
                    android:hint="@string/please_input_password"
                    android:paddingLeft="@dimen/view_space_8"
                    android:textColor="?attr/font_black"
                    android:textSize="@dimen/font_size_normal" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="?attr/divide_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="@dimen/login_width"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/confirm_password"
                    android:textColor="?attr/font_black"
                    android:textSize="@dimen/font_size_normal" />

                <EditText
                    android:id="@+id/et_register_password2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/shape_register_last"
                    android:hint="@string/please_input_password_again"
                    android:paddingLeft="@dimen/view_space_8"
                    android:textColor="?attr/font_black"
                    android:textSize="@dimen/font_size_normal" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_weight="1"
        android:background="?attr/theme_green"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_register_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>
</LinearLayout><!-- From: file:/D:/Android/Project/QuestionAnswer/app/src/main/res/layout/activity_register.xml -->