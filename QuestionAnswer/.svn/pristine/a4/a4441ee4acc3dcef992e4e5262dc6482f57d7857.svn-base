<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ssdut411.app.questionanswer" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <application
        android:name="com.ssdut411.app.questionanswer.application.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/role_student"
        android:label="@string/app_name"
        android:theme="@style/DayTheme" >
        <activity
            android:name=".activity.system.FirstPageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.system.MainActivity"/>
        <activity android:name=".activity.question.SelectPointActivity"/>
        <activity android:name=".activity.question.TestHistoryActivity"/>
        <activity android:name=".activity.question.AnswerCardActivity"/>
        <activity android:name=".activity.question.ClassRankActivity"/>
        <activity android:name=".activity.question.LookQuestionActivity"/>
        <activity android:name=".activity.question.MyHomeWorkActivity"/>
        <activity android:name=".activity.question.MyTestActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".activity.question.QuestionActivity"/>
        <activity android:name=".activity.question.ReportCardActivity"/>
        <activity android:name=".activity.question.ListViewActivity"/>
        <activity android:name=".activity.question.ErrorOrCollectQuestionActivity"/>

        <activity android:name=".activity.teacher.CheckHomeworkActivity"/>
