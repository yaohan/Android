        <activity android:name=".activity.person.InfoActivity"/>
        <activity android:name=".activity.student.MainPageActivity"/>

        <activity android:name=".activity.person.SelectRoleActivity"/>
        <activity android:name=".activity.person.LoginActivity"/>
        <activity android:name=".activity.person.RegisterActivity"/>
        <activity android:name=".activity.parent.MainPageActivity"/>
        <activity android:name=".activity.person.SelectSchoolActivity"/>
        <activity android:name=".activity.person.SetActivity"/>

        <activity android:name=".activity.parent.ChildHomeworkActivity"/>
    </application>

</manifest>
